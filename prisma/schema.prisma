generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Driver {
  id             Int      @id @default(autoincrement())
  name           String
  availability   Boolean  @default(true)
  rides          Ride[]   @relation("DriverRides")
}



model Passenger {
  id             Int      @id @default(autoincrement())
  name           String
  rides          Ride[]   @relation("PassengerRides")
}

model Ride {
  id          Int      @id @default(autoincrement())
  driverId    Int?
  passengerId Int?
  startLatitude Float   
  startLongitude Float   
  endLatitude   Float
  endLongitude   Float
  status        String  @default("pending")
  startTime     DateTime?
  endTime       DateTime?

  driver    Driver?    @relation("DriverRides", fields: [driverId], references: [id], onDelete: SetNull)
  passenger Passenger? @relation("PassengerRides", fields: [passengerId], references: [id], onDelete: SetNull)
}